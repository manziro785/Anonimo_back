{
  "info": {
    "name": "Anonimo Backend API",
    "description": "Complete API collection for Anonimo backend with AI integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://your-app.onrender.com",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register USER",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"USER\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "register"]
            }
          }
        },
        {
          "name": "Register MANAGER",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"manager@example.com\",\n  \"password\": \"password123\",\n  \"username\": \"john_manager\",\n  \"role\": \"MANAGER\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/authenticate",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "authenticate"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", "me"]
            }
          }
        },
        {
          "name": "Update My Profile",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"new_username\",\n  \"email\": \"newemail@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", "me"]
            }
          }
        },
        {
          "name": "Get All Users (ADMIN)",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {
              "raw": "{{baseUrl}}/api/v1/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users"]
            }
          }
        }
      ]
    },
    {
      "name": "Chats",
      "item": [
        {
          "name": "Create Chat",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"My Chat with AI\",\n  \"user\": {\"id\": 1}\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/chat",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "chat"]
            }
          }
        },
        {
          "name": "Get All Chats",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {
              "raw": "{{baseUrl}}/api/v1/chat",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "chat"]
            }
          }
        },
        {
          "name": "Update Chat",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Chat Name\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/chat/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "chat", "1"]
            }
          }
        },
        {
          "name": "Delete Chat",
          "request": {
            "method": "DELETE",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {
              "raw": "{{baseUrl}}/api/v1/chat/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "chat", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Messages",
      "item": [
        {
          "name": "Send Message",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"chatId\": 1,\n  \"content\": \"Hello! This is my message\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/messages",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "messages"]
            }
          }
        },
        {
          "name": "Send AI Message",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"chatId\": 1,\n  \"content\": \"Tell me a joke about programmers\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/messages/ai",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "messages", "ai"]
            }
          }
        },
        {
          "name": "Get Chat Messages",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {
              "raw": "{{baseUrl}}/api/v1/messages/chat/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "messages", "chat", "1"]
            }
          }
        },
        {
          "name": "Get Recent Messages",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {
              "raw": "{{baseUrl}}/api/v1/messages/chat/1/recent?limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "messages", "chat", "1", "recent"],
              "query": [{"key": "limit", "value": "10"}]
            }
          }
        }
      ]
    },
    {
      "name": "Surveys",
      "item": [
        {
          "name": "Create Survey",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Satisfaction Survey\",\n  \"description\": \"How satisfied are you?\",\n  \"questions\": [\n    {\n      \"text\": \"Rate our service\",\n      \"type\": \"SINGLE_CHOICE\",\n      \"answers\": [\n        {\"text\": \"Excellent\"},\n        {\"text\": \"Good\"},\n        {\"text\": \"Fair\"},\n        {\"text\": \"Poor\"}\n      ]\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/surveys",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "surveys"]
            }
          }
        },
        {
          "name": "Get All Surveys",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {
              "raw": "{{baseUrl}}/api/v1/surveys",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "surveys"]
            }
          }
        }
      ]
    },
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/actuator/health",
              "host": ["{{baseUrl}}"],
              "path": ["actuator", "health"]
            }
          }
        }
      ]
    }
  ]
}
